{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2021",
    "composite": true,
    "paths": {
      "@common/*": ["./common/*"],
      "@entities": ["./entities/index"],
      "@generated": ["./generated/index"],
      "@lib/*": ["./modules/lib/*"],
      "@modules/*": ["./modules/*"]
    }
  },
  "references": [
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "files": [],
  "include": ["src/**/*.ts", ".eslintrc.js"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"],
  "extends": "../../tsconfig.base.json"
}
